{{#if addNewMessage}}
  <h1>New Message</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="comment">Enter your comment:</label>
        {{input value=comment id="comment"}}
      </div>

      <div class="form-group">
        <label for="notes">Enter your notes:</label>
        {{input value=notes id="notes"}}
      </div>

      <button {{action 'saveMessage'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'messageFormShow'}}>New Message</button>
{{/if}}
